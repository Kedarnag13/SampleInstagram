<!DOCTYPE html>
<html>
<head>
  <title>SampleInstagram</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <% if !user_signed_in? && (controller_name == "welcome" && action_name == "index") %>
  <div style="text-align:center; margin-top:5em;">
    <%= link_to "Sign in with Instagram", "/users/auth/instagram", :class => "btn-instagram text-center" %>
  </div>
  <% end %>
  <div class="container">
    <%= render :partial=>"/layouts/common/flash_message" -%>
  </div>
  <div class="row" style="padding:0px; position:fixed; top:0; width:100%; z-index:2; height:20.5px;background-color:#f9f9f9;">
    <div class="col-xs-4" style=" background-color:#f9f9f9;">
      <%= image_tag "top1.png", style: "height:20.5px;" %>
    </div>
    <div class="col-xs-4 text-right" style="padding-right:15%">
      <span id="time"></span>
    </div>
    <div class="col-xs-4">
      <% if user_signed_in? %>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <%= image_tag "log_out.png", size: "20x20", style: "right:18px;position:absolute;top:2px;" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="container text-center" style="background-color:#f9f9f9;height:44.5px;border-bottom:solid 1px #b2b2b2; position: fixed; top:20.5px; width:100%; z-index:2;">
      <h2 style="margin-top:4px; color:#42136A;">Sample Instagram</h2>
  </div>
  <%= yield %>
</body>
<% if !user_signed_in? && (controller_name == "welcome" && action_name == "index") %>
  <div class="row" style="position:fixed;bottom:0px;width:110%; height:50px;background-color:#E8E8E8;">
    <%= link_to "Privacy Policy", privacy_policy_path, style: "display:block;float:right;position:relative;right:10%;top:15px;" %>
  </div>
<% end %>
</html>
